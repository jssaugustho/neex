{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.2",
    "title": "Lux CRM Core",
    "description": "Api documentation for Lux CRM Back End Core."
  },
  "schemes": ["https"],
  "servers": [
    {
      "description": "Localhost Development API.",
      "url": "http://localhost:3000/"
    }
  ],
  "components": {
    "securitySchemes": {
      "Token": {
        "type": "apiKey",
        "in": "header",
        "name": "Authentication"
      },
      "FingerprintID": {
        "type": "apiKey",
        "in": "header",
        "name": "Fingerprint"
      },
      "Language": {
        "type": "apiKey",
        "in": "header",
        "name": "Accept-Language"
      }
    },
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "passwd": {
            "type": "string"
          }
        }
      },
      "RefreshToken": {
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "SessionId": {
        "type": "object",
        "properties": {
          "sessionId": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "usuariodeteste@gmail.com"
          },
          "passwd": {
            "type": "string",
            "example": "SenhaDeTeste@123"
          },
          "name": {
            "type": "string",
            "example": "User"
          },
          "lastName": {
            "type": "string",
            "example": "de Teste"
          },
          "phone": {
            "type": "string",
            "example": "(11) 9 9171-8696"
          }
        }
      }
    }
  },
  "security": [
    {
      "Token": []
    },
    {
      "FingerprintID": []
    },
    {
      "Language": []
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Fazer login.",
        "tags": ["Authentication"],
        "description": "Faça seu login e receba de volta um token e um refresh token.",
        "security": [
          {
            "FingerprintID": []
          },
          {
            "Language": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "Autenticando com email e senha.": {
                  "value": {
                    "email": "usuariodeteste@gmail.com",
                    "passwd": "SenhaDeTeste@123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "format": "email",
                      "example": "Ok"
                    },
                    "message": {
                      "type": "string",
                      "example": "Usuário autenticado com sucesso."
                    },
                    "token": {
                      "type": "string",
                      "example": "bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY3ZjExZjdkYmRiMjJmNmM3NWFlZTJkOSIsInNlc3Npb25JZCI6IjY3ZjEyNDU5NDk3ZDJlMjIyZTFiZjRkNiIsInR5cGUiOiJUb2tlbiIsImlhdCI6MTc0Mzg3OTM2MiwiZXhwIjoxNzQ0NDc5MzYyfQ.P69JGGjp0CyVbkS-vzd4HPwNXrHlLrBXhqkNpsv6L90"
                    },
                    "refreshToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY3ZjExZjdkYmRiMjJmNmM3NWFlZTJkOSIsInNlc3Npb25JZCI6IjY3ZjEyNDU5NDk3ZDJlMjIyZTFiZjRkNiIsInR5cGUiOiJSZWZyZXNoVG9rZW4iLCJpYXQiOjE3NDM4NzkzNjIsImV4cCI6MTkxNjY3OTM2Mn0.PgbPFkM8hhizs3LRpIFyBaDNBs5TvxBQ_uLPNpuX0Lw"
                    },
                    "data": {
                      "type": "object",
                      "format": "email",
                      "example": {
                        "id": "67f11f7dbdb22f6c75aee2d9",
                        "createdAt": "2025-04-05T12:18:05.112Z",
                        "updatedAt": "2025-04-05T12:18:05.112Z",
                        "active": true,
                        "email": "joseaugustholi@gmail.com",
                        "emailVerified": false,
                        "emailNotification": true,
                        "agree": true,
                        "name": "José",
                        "lastName": "Augustho",
                        "passwd": "********************************",
                        "phone": "(34) 99171-8593",
                        "role": "USER"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "format": "email",
                      "example": "AuthError"
                    },
                    "message": {
                      "type": "string",
                      "example": "<Mensagem de erro>"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parametros inválidos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "format": "email",
                      "example": "UserError"
                    },
                    "message": {
                      "type": "string",
                      "example": "<Mensagem de erro>"
                    }
                  }
                }
              }
            }
          },
          "502": {
            "description": "Erro interno.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "format": "email",
                      "example": "InternalServerError"
                    },
                    "message": {
                      "type": "string",
                      "example": "<Mensagem de erro>"
                    }
                  }
                }
              }
            }
          }
        }
      }
