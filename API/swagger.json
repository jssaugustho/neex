    "/inactivate-session": {
      "put": {
        "summary": "Desativar sessão com base em um id.",
        "tags": ["Session"],
        "description": "Desativa a sessão de um usuário com base no sessionId. (Requer que a sessão seja do usuário autenticado ou que o usuário autenticado tenha privilégios de suporte ou administrador)",
        "security": [
          {
            "FingerprintID": []
          },
          {
            "Language": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionId"
              },
              "examples": {
                "Desativando uma sessão": {
                  "value": {
                    "sessionId": "67e1d85201acae1a746a3a6b"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "format": "email",
                      "example": "Ok"
                    },
                    "message": {
                      "type": "string",
                      "example": "Usuário autenticado com sucesso."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado."
          },
          "400": {
            "description": "Parametros inválidos."
          },
          "502": {
            "description": "Erro interno."
          }
        }
      },
      "get": {
