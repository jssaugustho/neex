enum Status {
  PENDING
  REJECTED
  WAITING
  SUCCESS
  FAILED
}

enum Role {
  ADMIN
  SUPPORT
  USER
}

enum VerificationType {
  WELCOME_EMAIL
  PRE_AUTHENTICATION
  VERIFICATION
  VERIFY_SESSION
  RECOVERY
  SET_NEW_PASSWD
  LOGOUT_ALL_SESSIONS
  LOGOUT_SESSION
}
